<serialization jsxversion="3.6" xmlns="urn:tibco.com/v3.0">
  <name><![CDATA[Text Input]]></name>
  <icon><![CDATA[images/prototypes/textbox.gif]]></icon>
  <description><![CDATA[Text input field.]]></description>
  <onBeforeDeserialize></onBeforeDeserialize>
  <onAfterDeserialize></onAfterDeserialize>
  <object type="com.intalio.ria.Field">
    <variants/>
    <strings jsxname="textinput-field"
        jsxclassname="field"
        riaLabelText="[Text input label]"
        riaHelpImageSrc="images/help.gif" 
        riaErrorImageSrc="images/error.gif">
    </strings>
    <object type="jsx3.gui.TextBox">
      <variants/>
      <strings jsxname="textbox" jsxmargin="0 4 0 0" jsxpadding="2 2 0 0" />
      <events jsxfocus='com.intalio.ria.highlightTextInput(this, false);'
          jsxblur='com.intalio.ria.highlightTextInput(this, true);'
          jsxchange="com.intalio.ria.validate(this, objEVENT);" 
          jsxincchange="com.intalio.ria.validate(this, objEVENT);"/>      
    </object>      
  </object>
</serialization>
