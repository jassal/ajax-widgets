      <events jsxselect="com.intalio.ria.validate(this, objEVENT);"/>
    </object>
    <object type="jsx3.gui.RadioButton">
      <variants jsxheight="18" jsxdefaultselected="1" jsxselected="0" jsxrelativeposition="1"/>
      <strings jsxname="radio" jsxtext="[radio button text]" jsxvalue="radio-2" jsxgroupname="group1" jsxmargin="0 4 0 0"/>
      <events jsxselect="com.intalio.ria.validate(this, objEVENT);"/>
    </object>    
  </object>
