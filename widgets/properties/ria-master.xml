<data jsxid="jsxroot">
  <record jsxid="riaLabel" group="1" jsxtext="Label">
    <record jsxid="riaLabelText" 
        jsxtext="Label Text"
        eval="0"
        jsxtip="Sets the text/HTML content for the label."
        docgetter="getLabelText" 
        docsetter="setLabelText"
        docdefault="Empty"
        jsxexecute="objJSX.setLabelText(vntValue, true);"
        jsxmask="jsxtextarea"/>
  </record>
  
  <record jsxid="riaHelpImage" group="1" jsxtext="Help Image">
    <record jsxid="riaHelpImageSrc" 
        jsxtext="Image Path"
        jsxtip="Sets the path of the help image file. The path is relative to the project root."
        docgetter="getHelpImageSrc" 
        docsetter="setHelpImageSrc"
        eval="0"
        jsxexecute="objJSX.setHelpImageSrc(vntValue, true);"
        jsxmask="jsxpath"/>
    <record jsxid="riaHelpImageTip" 
        jsxtext="Tooltip"
        eval="0"
        jsxtip="Sets the text displayed when hovered over this object (text only)."
        docgetter="getHelpImageTip" 
        docsetter="setHelpImageTip"
        docdefault="Empty"
        jsxexecute="objJSX.setHelpImageTip(vntValue, true);"
        jsxmask="jsxtextarea"/>                
	<record jsxid="riaHelpImagePos"
        jsxtext="Position"
        eval="0"
        jsxtip="Sets the Position of help image."
        docgetter="getHelpImagePos"
        docsetter="setHelpImagePos"
		docdefault="After Field"
        jsxexecute="objJSX.setHelpImagePos(vntValue, true);"
        jsxmask="jsxselect">
      <enum jsxid="com.intalio.ria.Field.HELP_IMG_POS_BF" jsxtext="Before Field"/>
      <enum jsxid="com.intalio.ria.Field.HELP_IMG_POS_AF" jsxtext="After Field"/>
	</record>
  </record>
    
  <record jsxid="riaValidation" group="1" jsxtext="Validation">
    <record jsxid="riaShowValidation" 
        jsxtext="Show"
        eval="0"
        jsxtip="Sets whether validation should be shown for this field or not."
        docgetter="getShowValidation" 
        docsetter="setShowValidation"
        docdefault="Yes"
        jsxexecute="objJSX.setShowValidation(vntValue, true);"
        jsxmask="jsxselect">
      <enum jsxid="com.intalio.ria.Field.SHOW_VALIDATION_YES" jsxtext="Yes"/>
      <enum jsxid="com.intalio.ria.Field.SHOW_VALIDATION_NO" jsxtext="No"/>
    </record>  
    <record jsxid="riaErrorImageSrc" 
        jsxtext="Image Path"
        jsxtip="Sets the path of the error image file. The path is relative to the project root."
        docgetter="getErrorImageSrc" 
        docsetter="setErrorImageSrc"
        eval="0"
        jsxexecute="objJSX.setErrorImageSrc(vntValue, true);"
        jsxmask="jsxpath"/>
    <record jsxid="riaErrorMessageText" 
        jsxtext="Text/HTML"
        eval="0"
        jsxtip="Sets the text/HTML content for the error message."
        docgetter="getErrorMessageText" 
        docsetter="setErrorMessageText"
        docdefault="Empty"
        jsxexecute="objJSX.setErrorMessageText(vntValue, true);"
        jsxmask="jsxtextarea"/>        
  </record>

  <record jsxid="riaLayout" group="1" jsxtext="Layout">
    <record jsxid="riaLayoutDirection" 
        jsxtext="Direction"
        eval="0"
        jsxtip="Sets the layout direction when more than one input control is added to this field."
        docgetter="getLayoutDirection" 
        docsetter="setLayoutDirection"
        docdefault="Horizontal"
        jsxexecute="objJSX.setLayoutDirection(vntValue, true);"
        jsxmask="jsxselect">
      <enum jsxid="com.intalio.ria.Field.LAYOUT_HORIZONTAL" jsxtext="Horizontal"/>
      <enum jsxid="com.intalio.ria.Field.LAYOUT_VERTICAL" jsxtext="Vertical"/>
    </record>        
  </record>
  
  <record jsxid="riaSection" group="1" jsxtext="Section">
    <record jsxid="riaTitleText" 
        jsxtext="Title"
        eval="0"
        jsxtip="Sets the text content for the section title."
        docgetter="getTitleText" 
        docsetter="setTitleText"
        docdefault="Empty"
        jsxexecute="objJSX.setTitleText(vntValue, true);"
        jsxmask="jsxtextarea"/>       
  </record>
  
  <record jsxid="riaRoles" group="1" jsxtext="Section">
    <record jsxid="riaRolesList"
        jsxtext="Roles"
        eval="0"
        jsxtip="Sets the list of accepted roles for this field."
        docgetter="getRoles" 
        docsetter="setRoles"
        docdefault="Empty"
        jsxexecute="objJSX.setRoles(vntValue);"
        jsxmask="jsxtextarea"/>   
  </record>
</data>

